{
  "name": "@setzkasten/cli",
  "version": "0.1.0-rc.4",
  "description": "Setzkasten CLI for font license governance and audit trails.",
  "private": false,
  "type": "module",
  "bin": {
    "setzkasten": "src/index.js"
  },
  "main": "src/index.js",
  "files": [
    "src/index.js",
    "src/lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node --check src/index.js && node --check src/lib/*.js",
    "test": "node --test \"src/**/*.test.js\"",
    "lint": "node --check src/index.js && node --check src/lib/*.js",
    "pack:dry-run": "npm pack --dry-run --json",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "keywords": [
    "fonts",
    "license",
    "governance",
    "audit",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klick/setzkasten.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/klick/setzkasten/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/klick/setzkasten/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
